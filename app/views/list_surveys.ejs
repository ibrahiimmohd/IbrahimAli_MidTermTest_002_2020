<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="css\styles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body class="bodyStyle">
    <div class="container pt-4">
        <div class="text-center">
            <img src="img\logo.png" class="img-fluid">
        </div>
    <table align="center">
        <tr>
            <td>
                <div>
                    <label style="font-weight: bold;">Survey ID:</label>
                </div>
            </td>
            <td>
                <div>
                    <label style="font-weight: bold;">Game Genre:</label>
                </div>
            </td>
            <td>
                <div>
                    <label style="font-weight: bold;">Game Played Per Year:</label>
                </div>
            </td>
            <td>
                <div>
                    <label style="font-weight: bold;">Age:</label>
                </div>
            </td>
            <td>
                <div>
                    <label style="font-weight: bold;">Update/Delete the Survey </label>
                </div>
            </td>
        </tr>

        <% survey.forEach(function(survey){ %>

            <form method="post" action="/list_surveys/<%= survey.surveyId %>?_method=PUT">
                <tr>
                    <td>
                        <div>
                            <input type="text" class="form-control" name="surveyId" value="<%= survey.surveyId %>" />
                        </div>
                    </td>
                    <td>
                        <div>
                            <input type="text" class="form-control" name="gameGenre" value="<%= survey.gameGenre %>" />
                        </div>
                    </td>
                    <td>
                        <div>
                            <input type="number" class="form-control" name="daysPerYear" value="<%= survey.daysPerYear %>" />
                        </div>
                    </td>
                    <td>
                        <div>
                            <input type="number" class="form-control" name="age" value="<%= survey.age %>" />
                        </div>
                    </td>
                    <td>
                        <div>
                            <input type="submit" class="btn btn-sm btn-success" value="Update Survey" style="width: 200px" />
                        </div>
            </form>
                        <div>
                            <form method="post" action="/list_surveys/<%= survey.surveyId %>?_method=DELETE">
                                <input type="submit" class="btn btn-sm btn-danger" value="Delete Survey" style="width: 200px" />
                            </form>
                        </div>
                    </td>
                </tr>

            <% })%>
    </table>
    <div class="text-center pt-4">
        <a href="http://localhost:3000" class="btn btn-lg btn-primary"> Main Page</a>
    </div>
</body>

</html>